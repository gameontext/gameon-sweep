<server description="Game On! Mediator Service">

    <!-- Enable features -->
  <featureManager>
    <feature>localConnector-1.0</feature>
    <feature>jaxrs-2.0</feature>
    <feature>cdi-1.2</feature>
    <feature>jsonp-1.0</feature>
    <feature>jndi-1.0</feature>
  </featureManager>

  <httpEndpoint host="*" httpPort="9080" httpsPort="9443" id="defaultHttpEndpoint"/>

  <jndiEntry jndiName="mapUrl" value="${env.MAP_URL}"/>
  <jndiEntry jndiName="mapApiKey" value="${env.MAP_KEY}"/>

  <logging consoleLogLevel="INFO" traceSpecification="*=info:net.wasdev.gameon.*=all"/>

  <applicationMonitor dropinsEnabled="false"/>
  <webApplication contextRoot="/sweep" id="sweep-app" location="sweep-app.war" name="sweep-app"/>

</server>
